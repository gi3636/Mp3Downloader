{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YouTube音乐下载器",
  "version": "1.0.0",
  "identifier": "com.fenggi.ytmusic-downloader",
  "build": {
    "devUrl": "http://localhost:5000",
    "frontendDist": "http://localhost:5000"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "YouTube 音乐下载器",
        "width": 1100,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ytmusic-backend",
      "binaries/yt-dlp"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
